{% extends "layout/layout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}

<div class="container">

	<div class="content">
  <div class="grid">
  {% for articles in articles %}
      {% set id = articles.id %}
        <figure class="effect-oscar">
	        <img src="{{articles.image}}" alt="img09" style="width: 100%; object-fit: cover;"/>
		<figcaption>
			<h2>{{articles.title}}</h2>
			<p>{{articles.pseudo}}</p>
			<a href="{{path_for('article',{'id':articles.id})}}"></a>
		</figcaption>			
	</figure>
  
  {% endfor %}
  </div>
  </div>
  </div>


{% endblock %}
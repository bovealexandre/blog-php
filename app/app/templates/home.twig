{% extends "layout/layout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}


<div class="container">
    <div class="row">
        <div class="col-md-6 jasgrid">
            {% for articles in articles %}
            <div class="box-item">
                <div class="box-post">
                    <span class="label label-success">
                        <a href="#" rel="tag">{{articles.pseudo}}</a>
                    </span>
                    <h1 class="post-title">
                        <a href="#">
                            {{articles.title}}
                        </a>
                    </h1>
                    <span class="meta">
                        <span><i class="fas fa-clock"></i> {{articles.publish_date}}</span>
                    </span>
                </div>
                <img src="{{articles.image}}" alt="City in the sky: world's biggest hotel to open in Mecca" 
                class="">        
            </div>

            {% else %}

            <p>Il n'y a pas encore d'articles</p>

            {% endfor %}

        </div>

        
    </div>

</div> <!-- /container -->
{% endblock %}
        

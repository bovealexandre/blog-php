{% extends "layout/layout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}


<!-- Page Content -->


  <!-- Page Heading -->
  <iframe width="100%" height="100%" src="https://www.youtube.com/embed/a8oqBaKA6Rg?autoplay=1&controls=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <div class="container">

  <div class="accordian">
    <ul>
    {% for articles in articles %}
		<li>
			<div class="image_title">
				<a href="{{path_for('article',{'id':articles.id})}}">{{ articles.title}}</a>
				<a href="{{path_for('author', { 'id':articles.writer_id})}}">{{ articles.pseudo}}</a>
			</div> 
			<a href="{{path_for('article',{'id':articles.id})}}">
				<img class ="w-100 ofc" src="{{ articles.image}}"/>
			</a>
		</li>
    {% else %}
      <p>Il n'y a pas encore d'articles</p>
    {% endfor %}
    </ul>
  </div>


</div> <!-- /container -->
{% endblock %}
        

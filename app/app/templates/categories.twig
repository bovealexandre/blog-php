{% extends "layout/layout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}

<div class="container">

  <div class="grid">
	{{ dump(articles) }}
  {% for articles in articles %}
      {% set id = articles.id %}
        <figure class="effect-oscar">
	        <img src="{{articles.image}}" alt="img09"/>
		<figcaption>
			<h2>{{articles.title}}</h2>
			<p>{{articles.pseudo}}</p>
			<a href="#">View more</a>
		</figcaption>			
	</figure>
  
  {% endfor %}
  </div>
  </div>


{% endblock %}
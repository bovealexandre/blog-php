{% extends "layout/dashboardlayout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}
<div class="container">

    <h1 class="mt-4 mb-4">Categories</h1>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col" class="w-100">Title</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row" colspan="8" class="text-center"><i class="fas fa-plus-square"></i> Ajouter une cat√©gorie</th>
            </tr>
            {% for categories in categories %}
              {% set catNum = catNum + 1 %}
              <tr> 
                <th scope="row">{{catNum}}</th>
                <td class="w-100">{{categories.nom}}</td>
                <td><i class="fas fa-edit"></i></td>
                <td><i class="fas fa-trash"></i></td>
              </tr>
            {% else %}
              <tr>
                <th colspan="8" class="text-center">There are no categories at the moment</th>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
</div>

{% endblock %}
{% extends "layout/dashboardlayout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mt-4 mb-4">Create a new article</h1>

    <div class="row">
            <div class="account-wall">
                <form class="form-signin" action="{{ path_for('dashboardcreatenewarticle') }}" method="post">
                    <input type="text" class="form-control" placeholder="title" name="title" required autofocus>
                    <select id="interet" class="form-control" name="category[]" multiple>
                        {% for categories in categories %}
                            <option value="{{categories.id}}">{{categories.nom}}</option> 
                        {% endfor %}
                    </select>
                    <textarea id="editor" name="text"required></textarea>
                    <input type="text" class="form-control" placeholder="image" name="image" required >
                    {{ csrf_fields() | raw }}
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Submit</button>
                </form>
            </div>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/12.0.0/classic/ckeditor.js"></script>
<script>
ClassicEditor
    .create( document.querySelector( '#editor' ) ){
    }
    .then( editor => {
        console.log( editor );
    } )
    .catch( error => {
        console.error( error );
    } );
</script>
{% endblock %}
{% extends "layout/dashboardlayout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mt-4 mb-4">Create a new article</h1>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 m-auto">
            <div class="account-wall">
                <form class="form-signin" action="{{ path_for('dashboardcreatenewarticle') }}" method="post">
                    <input type="text" class="form-control" placeholder="title" name="title" required autofocus>
                    <select id="interet" class="form-control" name="category[]" multiple>
                        {% for categories in categories %}
                            <option value="{{categories.id}}">{{categories.nom}}</option> 
                        {% endfor %}
                    </select>
                    <textarea class="form-control" placeholder="text" id="text" name="text"  rows="10" cols="80" required></textarea>
                    <input type="text" class="form-control" placeholder="image" name="image" required >
                    {{ csrf_fields() | raw }}
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

        <script>
                        ClassicEditor
                                .create( document.querySelector( '#text' ) )
                                .then( editor => {
                                        console.log( editor );
                                } )
                                .catch( error => {
                                        console.error( error );
                                } );
        </script>
{% endblock %}
{% extends "layout/layout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 m-auto">
            <div class="account-wall">

                <form class="form-signin" action="" method="post">
                    <input type="text" class="form-control" placeholder="Name" name="Name" required autofocus>
                    <input type="text" class="form-control" placeholder="Firstname" name="Firstname" required autofocus>
                    <input type="email" class="form-control" placeholder="Email" name="user_email" required autofocus>
                    <input type="text" class="form-control" placeholder="Pseudo" name="pseudo" required autofocus>
                    <input type="password" class="form-control" placeholder="Password" name="password" required>
                    {{ csrf_fields() | raw }}
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Signup</button>
                </form>

            </div>
        </div>
    </div>
</div>

{% endblock %}
{% extends "layout/dashboardlayout.twig" %}

{% block title %}
        <title>Slim 3</title>
{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mt-4 mb-4">Create a new Category</h1>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 m-auto">
            <div class="account-wall">
              <form class="form-signin" action="{{ path_for('dashboardcreatenewcategory') }}" method="post">
                    <input type="text" class="form-control" placeholder="Name" name="name" required autofocus>
                    <input type="text" class="form-control" placeholder="Image" name="image" required autofocus>
                    {{ csrf_fields() | raw }}
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Create</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}